<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.taller.proyecto_bd.ui.MenuPrincipalController"
            prefWidth="1100" prefHeight="700"
            stylesheets="@../css/styles.css"
            style="-fx-background-color: linear-gradient(to bottom right, #0f2027, #203a43, #2c5364);">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10"
              style="-fx-background-color: rgba(255,255,255,0.1);
                     -fx-border-width: 0 0 2 0;
                     -fx-border-color: #00b4d8;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="20"/>
            </padding>
            <Label fx:id="lblTitulo"
                   text="Sistema de Gestión de Electrodomésticos"
                   style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <left>
        <VBox spacing="18"
              style="-fx-background-color: rgba(255,255,255,0.05);
                     -fx-border-width: 0 2 0 0;
                     -fx-border-color: #00b4d8;">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>
            <Button text="Entidades" onAction="#abrirEntidades" styleClass="menu-btn"/>
            <Button text="Transacciones" onAction="#abrirTransacciones" styleClass="menu-btn"/>
            <Button text="Reportes / Consultas" onAction="#abrirReportes" styleClass="menu-btn"/>
            <Button text="Utilidades" onAction="#abrirUtilidades" styleClass="menu-btn"/>
            <Button text="Ayuda" onAction="#abrirAyuda" styleClass="menu-btn"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="panelCentral" alignment="CENTER"
                   style="-fx-background-color: rgba(255,255,255,0.12);
                          -fx-background-radius: 16;
                          -fx-padding: 30;">
            <Label fx:id="lblMensajeBienvenida"
                   text="Bienvenido al Sistema de Gestión de Ventas"
                   style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;"/>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="25"
              style="-fx-background-color: rgba(255,255,255,0.1);
                     -fx-border-width: 2 0 0 0;
                     -fx-border-color: #00b4d8;">
            <padding>
                <Insets top="12" right="20" bottom="12" left="20"/>
            </padding>
            <Label fx:id="lblUsuario" text="Usuario: admin" style="-fx-text-fill: white;"/>
            <Label fx:id="lblFecha" text="Fecha: --/--/----" style="-fx-text-fill: white;"/>
        </HBox>
    </bottom>

</BorderPane>
