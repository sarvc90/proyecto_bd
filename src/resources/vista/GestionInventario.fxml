<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taller.proyecto_bd.ui.GestionInventarioController"
            stylesheets="@styles.css">

    <!-- ENCABEZADO -->
    <top>
        <VBox spacing="10" styleClass="header-section">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="GESTIÓN DE INVENTARIO" styleClass="title" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <Separator/>

            <!-- PANEL DE FILTROS Y BÚSQUEDA -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Estado:">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
                <ComboBox fx:id="cmbFiltroEstado" prefWidth="150"/>

                <Separator orientation="VERTICAL"/>

                <Label text="Buscar:">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
                <TextField fx:id="txtBuscar" promptText="Producto o categoría..." prefWidth="250"/>
                <Button fx:id="btnBuscar" text="Buscar" onAction="#buscar" styleClass="btn-primary"/>
                <Button fx:id="btnActualizar" text="Actualizar" onAction="#actualizar" styleClass="btn-secondary"/>
            </HBox>

            <!-- PANEL DE ESTADÍSTICAS -->
            <GridPane hgap="30" vgap="10" styleClass="stats-panel">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <!-- Total Productos -->
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Total Productos" styleClass="stats-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="lblTotalProductos" text="0" styleClass="stats-value" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                </VBox>

                <!-- Bajo Stock -->
                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Bajo Stock" styleClass="stats-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="lblBajoStock" text="0" styleClass="stats-value-error" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                </VBox>

                <!-- Sobre Stock -->
                <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <Label text="Sobre Stock" styleClass="stats-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="lblSobreStock" text="0" styleClass="stats-value-warning" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                </VBox>

                <!-- Valor Total -->
                <VBox spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="0">
                    <Label text="Valor Total Inventario" styleClass="stats-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="lblValorTotal" styleClass="stats-value" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                </VBox>
            </GridPane>
        </VBox>
    </top>

    <!-- TABLA DE INVENTARIO -->
    <center>
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <TableView fx:id="tblInventario" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colIdInventario" text="ID" prefWidth="50" minWidth="40"/>
                    <TableColumn fx:id="colProducto" text="Producto" prefWidth="250" minWidth="150"/>
                    <TableColumn fx:id="colCategoria" text="Categoría" prefWidth="150" minWidth="100"/>
                    <TableColumn fx:id="colCantidadActual" text="Cantidad" prefWidth="100" minWidth="80"/>
                    <TableColumn fx:id="colStockMinimo" text="Stock Mín" prefWidth="100" minWidth="80"/>
                    <TableColumn fx:id="colStockMaximo" text="Stock Máx" prefWidth="100" minWidth="80"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="120" minWidth="100"/>
                    <TableColumn fx:id="colUltimaActualizacion" text="Última Actualización" prefWidth="160" minWidth="140"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- PANEL DE ACCIONES -->
    <bottom>
        <HBox spacing="15" alignment="CENTER_RIGHT" styleClass="footer-section">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <Button fx:id="btnEntrada" text="Registrar Entrada" onAction="#registrarEntrada" styleClass="btn-success" disable="true">
                <font>
                    <Font size="14"/>
                </font>
            </Button>

            <Button fx:id="btnSalida" text="Registrar Salida" onAction="#registrarSalida" styleClass="btn-warning" disable="true">
                <font>
                    <Font size="14"/>
                </font>
            </Button>

            <Button fx:id="btnAjustar" text="Ajustar Stock" onAction="#ajustarStock" styleClass="btn-info" disable="true">
                <font>
                    <Font size="14"/>
                </font>
            </Button>

            <Button fx:id="btnEditar" text="Editar Límites" onAction="#editarLimites" styleClass="btn-secondary" disable="true">
                <font>
                    <Font size="14"/>
                </font>
            </Button>

            <Region HBox.hgrow="ALWAYS"/>

            <Label text="Doble clic para ver detalles" styleClass="hint-label">
                <font>
                    <Font size="12" name="System Italic"/>
                </font>
            </Label>
        </HBox>
    </bottom>

</BorderPane>