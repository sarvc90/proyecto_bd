<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="700.0" prefWidth="1100.0" 
            stylesheets="@styles.css" 
            xmlns="http://javafx.com/javafx/19" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.taller.proyecto_bd.controllers.UsuariosController">
   
   <!-- ==================== ENCABEZADO ==================== -->
   <top>
      <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label text="👤" textFill="white">
                     <font>
                        <Font size="32.0" />
                     </font>
                  </Label>
                  <VBox>
                     <children>
                        <Label styleClass="panel-title" text="Gestión de Usuarios" textFill="white">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Label>
                        <Label text="Administre los usuarios del sistema (Solo Administrador)" textFill="#ecf0f1">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  
                  <Region HBox.hgrow="ALWAYS" />
                  
                  <Label fx:id="lblUsuarioActual" text="Admin: Usuario Actual" textFill="white">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  
                  <Button mnemonicParsing="false" onAction="#cerrarVentana" 
                          styleClass="btn-secondary" text="✕ Cerrar">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   
   <!-- ==================== CONTENIDO PRINCIPAL ==================== -->
   <center>
      <SplitPane dividerPositions="0.35" BorderPane.alignment="CENTER">
         
         <!-- ==================== PANEL IZQUIERDO: FORMULARIO ==================== -->
         <AnchorPane minWidth="350.0" prefWidth="400.0">
            <children>
               <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="0.0" 
                          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" 
                          AnchorPane.topAnchor="0.0">
                  <content>
                     <VBox spacing="15.0" style="-fx-background-color: white;">
                        <padding>
                           <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                        <children>
                           <!-- Título del formulario -->
                           <Label styleClass="panel-title" text="Datos del Usuario">
                              <font>
                                 <Font name="System Bold" size="16.0" />
                              </font>
                           </Label>
                           
                           <Separator />
                           
                           <!-- Campo: Nombre Completo -->
                           <VBox spacing="5.0">
                              <children>
                                 <Label styleClass="field-label" text="Nombre Completo *">
                                    <font>
                                       <Font name="System Bold" size="11.0" />
                                    </font>
                                 </Label>
                                 <TextField fx:id="txtNombreCompleto" promptText="Nombre y apellidos" styleClass="text-field-custom">
                                    <font>
                                       <Font size="12.0" />
                                    </font>
                                 </TextField>
                              </children>
                           </VBox>
                           
                           <!-- Campo: Username -->
                           <VBox spacing="5.0">
                              <children>
                                 <Label styleClass="field-label" text="Usuario (Username) *">
                                    <font>
                                       <Font name="System Bold" size="11.0" />
                                    </font>
                                 </Label>
                                 <TextField fx:id="txtUsername" promptText="Nombre de usuario para login" styleClass="text-field-custom">
                                    <font>
                                       <Font size="12.0" />
                                    </font>
                                 </TextField>
                              </children>
                           </VBox>
                           
                           <!-- Campo: Contraseña -->
                           <VBox spacing="5.0">
                              <children>
                                 <Label styleClass="field-label" text="Contraseña *">
                                    <font>
                                       <Font name="System Bold" size="11.0" />
                                    </font>
                                 </Label>
                                 <PasswordField fx:id="txtPassword" promptText="Mínimo 4 caracteres" styleClass="text-field-custom">
                                    <font>
                                       <Font size="12.0" />
                                    </font>
                                 </PasswordField>
                                 <Label text="ℹ️ Dejar en blanco para mantener la contraseña actual (al editar)" textFill="#7f8c8d">
                                    <font>
                                       <Font size="10.0" />
                                    </font>
                                 </Label>
                              </children>
                           </VBox>
                           
                           <!-- Campo: Rol -->
                           <VBox spacing="5.0">
                              <children>
                                 <Label styleClass="field-label" text="Rol / Nivel *">
                                    <font>
                                       <Font name="System Bold" size="11.0" />
                                    </font>
                                 </Label>
                                 <ComboBox fx:id="cmbRol" prefWidth="320.0" promptText="Seleccione el rol">
                                    <items>
                                       <FXCollections fx:factory="observableArrayList">
                                          <String fx:value="ADMIN" />
                                          <String fx:value="VENDEDOR" />
                                          <String fx:value="GERENTE" />
                                       </FXCollections>
                                    </items>
                                 </ComboBox>
                                 <VBox spacing="3.0" style="-fx-background-color: #f8f9fa; -fx-padding: 8; -fx-background-radius: 5;">
                                    <children>
                                       <Label text="• ADMIN: Acceso total (Nivel 1)" textFill="#2c3e50">
                                          <font>
                                             <Font size="10.0" />
                                          </font>
                                       </Label>
                                       <Label text="• VENDEDOR: Sin usuarios/bitácora (Nivel 2)" textFill="#2c3e50">
                                          <font>
                                             <Font size="10.0" />
                                          </font>
                                       </Label>
                                       <Label text="• GERENTE: Solo consultas (Nivel 3)" textFill="#2c3e50">
                                          <font>
                                             <Font size="10.0" />
                                          </font>
                                       </Label>
                                    </children>
                                 </VBox>
                              </children>
                           </VBox>
                           
                           <!-- Campos: Email y Teléfono -->
                           <HBox spacing="10.0">
                              <children>
                                 <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                       <Label styleClass="field-label" text="Email">
                                          <font>
                                             <Font name="System Bold" size="11.0" />
                                          </font>
                                       </Label>
                                       <TextField fx:id="txtEmail" promptText="correo@ejemplo.com" styleClass="text-field-custom">
                                          <font>
                                             <Font size="12.0" />
                                          </font>
                                       </TextField>
                                    </children>
                                 </VBox>
                                 
                                 <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                       <Label styleClass="field-label" text="Teléfono">
                                          <font>
                                             <Font name="System Bold" size="11.0" />
                                          </font>
                                       </Label>
                                       <TextField fx:id="txtTelefono" promptText="3001234567" styleClass="text-field-custom">
                                          <font>
                                             <Font size="12.0" />
                                          </font>
                                       </TextField>
                                    </children>
                                 </VBox>
                              </children>
                           </HBox>
                           
                           <!-- CheckBox Activo -->
                           <CheckBox fx:id="chkActivo" selected="true" text="Usuario activo" styleClass="checkbox-custom">
                              <font>
                                 <Font size="12.0" />
                              </font>
                           </CheckBox>
                           
                           <!-- Info de último acceso -->
                           <HBox alignment="CENTER_LEFT" spacing="10.0" 
                                style="-fx-background-color: #e8f5e9; -fx-padding: 10; -fx-background-radius: 5;">
                              <children>
                                 <Label text="Último acceso:" textFill="#27ae60">
                                    <font>
                                       <Font name="System Bold" size="11.0" />
                                    </font>
                                 </Label>
                                 <Label fx:id="lblUltimoAcceso" text="Nunca" textFill="#27ae60">
                                    <font>
                                       <Font size="11.0" />
                                    </font>
                                 </Label>
                              </children>
                           </HBox>
                           
                           <Separator />
                           
                           <!-- Botones de acción -->
                           <HBox alignment="CENTER" spacing="10.0">
                              <children>
                                 <Button fx:id="btnNuevo" mnemonicParsing="false" 
                                        onAction="#nuevo" prefWidth="90.0" 
                                        styleClass="btn-primary" text="Nuevo">
                                    <font>
                                       <Font size="11.0" />
                                    </font>
                                 </Button>
                                 
                                 <Button fx:id="btnGuardar" mnemonicParsing="false" 
                                        onAction="#guardar" prefWidth="90.0" 
                                        styleClass="btn-success" text="Guardar">
                                    <font>
                                       <Font size="11.0" />
                                    </font>
                                 </Button>
                                 
                                 <Button fx:id="btnEliminar" mnemonicParsing="false" 
                                        onAction="#eliminar" prefWidth="90.0" 
                                        styleClass="btn-danger" text="Eliminar">
                                    <font>
                                       <Font size="11.0" />
                                    </font>
                                 </Button>
                              </children>
                           </HBox>
                           
                           <!-- Botones especiales -->
                           <HBox alignment="CENTER" spacing="10.0">
                              <children>
                                 <Button fx:id="btnCambiarPassword" mnemonicParsing="false" 
                                        onAction="#cambiarPassword" prefWidth="130.0" 
                                        styleClass="btn-warning" text="Cambiar Clave">
                                    <font>
                                       <Font size="11.0" />
                                    </font>
                                 </Button>
                                 
                                 <Button fx:id="btnBloquear" mnemonicParsing="false" 
                                        onAction="#bloquearDesbloquear" prefWidth="130.0" 
                                        styleClass="btn-secondary" text="Bloquear">
                                    <font>
                                       <Font size="11.0" />
                                    </font>
                                 </Button>
                              </children>
                           </HBox>
                           
                           <!-- Mensaje de información -->
                           <Label fx:id="lblMensaje" alignment="CENTER" textAlignment="CENTER" 
                                 visible="false" wrapText="true" styleClass="success-label">
                              <font>
                                 <Font size="11.0" />
                              </font>
                           </Label>
                        </children>
                     </VBox>
                  </content>
               </ScrollPane>
            </children>
         </AnchorPane>
         
         <!-- ==================== PANEL DERECHO: TABLA ==================== -->
         <AnchorPane minWidth="600.0">
            <children>
               <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" 
                     AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" 
                     AnchorPane.topAnchor="0.0">
                  <padding>
                     <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                  </padding>
                  <children>
                     <!-- Barra de búsqueda y filtros -->
                     <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                           <Label text="Buscar:">
                              <font>
                                 <Font name="System Bold" size="12.0" />
                              </font>
                           </Label>
                           <TextField fx:id="txtBuscar" promptText="Buscar por nombre o username..." 
                                     HBox.hgrow="ALWAYS" styleClass="text-field-custom">
                              <font>
                                 <Font size="12.0" />
                              </font>
                           </TextField>
                           <Button mnemonicParsing="false" onAction="#buscar" 
                                  styleClass="btn-primary" text="Buscar">
                              <font>
                                 <Font size="11.0" />
                              </font>
                           </Button>
                           <Button mnemonicParsing="false" onAction="#limpiarBusqueda" 
                                  styleClass="btn-secondary" text="Limpiar">
                              <font>
                                 <Font size="11.0" />
                              </font>
                           </Button>
                        </children>
                     </HBox>
                     
                     <!-- Filtros por rol -->
                     <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Filtrar por rol:">
                              <font>
                                 <Font name="System Bold" size="11.0" />
                              </font>
                           </Label>
                           <Button fx:id="btnTodos" mnemonicParsing="false" onAction="#filtrarTodos" 
                                  styleClass="btn-primary" text="Todos">
                              <font>
                                 <Font size="10.0" />
                              </font>
                           </Button>
                           <Button fx:id="btnFiltroAdmin" mnemonicParsing="false" onAction="#filtrarAdmin" 
                                  styleClass="btn-secondary" text="Admin">
                              <font>
                                 <Font size="10.0" />
                              </font>
                           </Button>
                           <Button fx:id="btnFiltroVendedor" mnemonicParsing="false" onAction="#filtrarVendedor" 
                                  styleClass="btn-secondary" text="Vendedor">
                              <font>
                                 <Font size="10.0" />
                              </font>
                           </Button>
                           <Button fx:id="btnFiltroGerente" mnemonicParsing="false" onAction="#filtrarGerente" 
                                  styleClass="btn-secondary" text="Gerente">
                              <font>
                                 <Font size="10.0" />
                              </font>
                           </Button>
                        </children>
                     </HBox>
                     
                     <!-- Tabla de usuarios -->
                     <TableView fx:id="tablaUsuarios" VBox.vgrow="ALWAYS">
                        <columns>
                           <TableColumn fx:id="colNombre" prefWidth="180.0" text="Nombre Completo" />
                           <TableColumn fx:id="colUsername" prefWidth="120.0" text="Usuario" />
                           <TableColumn fx:id="colRol" prefWidth="100.0" text="Rol" />
                           <TableColumn fx:id="colEmail" prefWidth="150.0" text="Email" />
                           <TableColumn fx:id="colTelefono" prefWidth="100.0" text="Teléfono" />
                           <TableColumn fx:id="colUltimoAcceso" prefWidth="140.0" text="Último Acceso" />
                           <TableColumn fx:id="colActivo" prefWidth="80.0" text="Estado" />
                        </columns>
                     </TableView>
                     
                     <!-- Barra de información -->
                     <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <children>
                           <Label text="Total de usuarios:">
                              <font>
                                 <Font name="System Bold" size="11.0" />
                              </font>
                           </Label>
                           <Label fx:id="lblTotalUsuarios" text="0">
                              <font>
                                 <Font size="11.0" />
                              </font>
                           </Label>
                           
                           <Separator orientation="VERTICAL" />
                           
                           <Label text="Activos:">
                              <font>
                                 <Font name="System Bold" size="11.0" />
                              </font>
                           </Label>
                           <Label fx:id="lblUsuariosActivos" text="0" textFill="#27ae60">
                              <font>
                                 <Font size="11.0" />
                              </font>
                           </Label>
                           
                           <Separator orientation="VERTICAL" />
                           
                           <Label text="Administradores:">
                              <font>
                                 <Font name="System Bold" size="11.0" />
                              </font>
                           </Label>
                           <Label fx:id="lblAdmins" text="0" textFill="#e74c3c">
                              <font>
                                 <Font size="11.0" />
                              </font>
                           </Label>
                           
                           <Separator orientation="VERTICAL" />
                           
                           <Label text="Vendedores:">
                              <font>
                                 <Font name="System Bold" size="11.0" />
                              </font>
                           </Label>
                           <Label fx:id="lblVendedores" text="0" textFill="#3498db">
                              <font>
                                 <Font size="11.0" />
                              </font>
                           </Label>
                        </children>
                     </HBox>
                  </children>
               </VBox>
            </children>
         </AnchorPane>
      </SplitPane>
   </center>
</BorderPane>