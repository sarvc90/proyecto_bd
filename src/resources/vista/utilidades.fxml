<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.taller.proyecto_bd.ui.utilidades.UtilidadesController"
            prefWidth="900" prefHeight="560"
            stylesheets="@../css/styles.css"
            styleClass="contenedor-entidades">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="encabezado-seccion">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Utilidades y calculadoras" styleClass="titulo-seccion"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <content>
                <Accordion>
                    <panes>
                        <TitledPane text="Calculadora de IVA" expanded="true">
                            <content>
                                <GridPane hgap="10" vgap="10" styleClass="panel-formulario">
                                    <padding>
                                        <Insets top="10" right="10" bottom="10" left="10"/>
                                    </padding>
                                    <Label text="Subtotal" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtSubtotalIva" promptText="Subtotal" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                    <Label text="IVA %" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtPorcentajeIva" promptText="Ej: 19" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                    <Button text="Calcular" onAction="#calcularIVA" styleClass="btn-primario" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                    <Label fx:id="lblResultadoIva" styleClass="mensaje-estado" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                                </GridPane>
                            </content>
                        </TitledPane>

                        <TitledPane text="Margen de ganancia">
                            <content>
                                <GridPane hgap="10" vgap="10" styleClass="panel-formulario">
                                    <padding>
                                        <Insets top="10" right="10" bottom="10" left="10"/>
                                    </padding>
                                    <Label text="Costo" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtCostoMargen" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                    <Label text="Precio de venta" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtPrecioMargen" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                    <Button text="Calcular" onAction="#calcularMargen" styleClass="btn-primario" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                    <Label fx:id="lblResultadoMargen" styleClass="mensaje-estado" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                                </GridPane>
                            </content>
                        </TitledPane>

                        <TitledPane text="Cuotas de crédito">
                            <content>
                                <GridPane hgap="10" vgap="10" styleClass="panel-formulario">
                                    <padding>
                                        <Insets top="10" right="10" bottom="10" left="10"/>
                                    </padding>
                                    <Label text="Monto financiado" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtMontoCredito" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                    <Label text="Plazo (meses)" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtPlazoCredito" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                    <Label text="Interés %" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtInteresCredito" promptText="Ej: 5" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                    <Button text="Calcular cuota" onAction="#calcularCuota" styleClass="btn-primario" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                                    <Label fx:id="lblResultadoCuota" styleClass="mensaje-estado" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                                </GridPane>
                            </content>
                        </TitledPane>

                        <TitledPane text="Aplicar descuento">
                            <content>
                                <GridPane hgap="10" vgap="10" styleClass="panel-formulario">
                                    <padding>
                                        <Insets top="10" right="10" bottom="10" left="10"/>
                                    </padding>
                                    <Label text="Precio original" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtPrecioDescuento" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                    <Label text="Descuento %" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtPorcentajeDescuento" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                    <Button text="Calcular" onAction="#calcularDescuento" styleClass="btn-primario" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                    <Label fx:id="lblResultadoDescuento" styleClass="mensaje-estado" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                                </GridPane>
                            </content>
                        </TitledPane>

                        <TitledPane text="Utilidad después de impuestos">
                            <content>
                                <GridPane hgap="10" vgap="10" styleClass="panel-formulario">
                                    <padding>
                                        <Insets top="10" right="10" bottom="10" left="10"/>
                                    </padding>
                                    <Label text="Costo" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtCostoUtilidad" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                    <Label text="Precio venta" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtPrecioUtilidad" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                    <Label text="IVA %" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtIvaUtilidad" promptText="Ej: 19" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                    <Button text="Calcular utilidad" onAction="#calcularUtilidad" styleClass="btn-primario" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                                    <Label fx:id="lblResultadoUtilidad" styleClass="mensaje-estado" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                                </GridPane>
                            </content>
                        </TitledPane>

                        <TitledPane text="Calendario rápido">
                            <content>
                                <VBox spacing="10" styleClass="panel-formulario">
                                    <DatePicker fx:id="dpCalendario"/>
                                    <Button text="Mostrar información" onAction="#mostrarInfoCalendario" styleClass="btn-secundario"/>
                                    <Label fx:id="lblInfoCalendario" styleClass="mensaje-estado"/>
                                </VBox>
                            </content>
                        </TitledPane>
                    </panes>
                </Accordion>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
