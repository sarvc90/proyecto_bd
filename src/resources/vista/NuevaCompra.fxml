<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="750.0" prefWidth="1200.0"
            stylesheets="@styles.css"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taller.proyecto_bd.ui.NuevaCompraController">

   <!-- ==================== ENCABEZADO ==================== -->
   <top>
      <VBox style="-fx-background-color: #3498db; -fx-padding: 15;">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label text="🛍️" textFill="white">
                     <font>
                        <Font size="32.0" />
                     </font>
                  </Label>
                  <VBox>
                     <children>
                        <Label styleClass="panel-title" text="Nueva Compra" textFill="white">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Label>
                        <Label text="Realice su pedido de contado o a crédito" textFill="#ecf0f1">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>

                  <Region HBox.hgrow="ALWAYS" />

                  <VBox alignment="CENTER_RIGHT">
                     <children>
                        <Label fx:id="lblClienteNombreTop" text="Cliente" textFill="white">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblCreditoDisponibleTop" text="Crédito disponible: \$ 0.00" textFill="#ecf0f1">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>

                  <Button mnemonicParsing="false" onAction="#cerrarVentana"
                          styleClass="btn-secondary" text="✕ Cerrar">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>

   <!-- ==================== CONTENIDO PRINCIPAL ==================== -->
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <!-- ==================== INFORMACIÓN DEL CLIENTE ==================== -->
            <VBox spacing="10.0" styleClass="card">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label styleClass="panel-title" text="Mis Datos">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>

                  <HBox spacing="20.0" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
                     <children>
                        <VBox spacing="3.0">
                           <children>
                              <Label text="Nombre:" textFill="#7f8c8d">
                                 <font>
                                    <Font size="10.0" />
                                 </font>
                              </Label>
                              <Label fx:id="lblClienteNombre" text="-" textFill="#2c3e50">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <Separator orientation="VERTICAL" />
                        <VBox spacing="3.0">
                           <children>
                              <Label text="Cédula:" textFill="#7f8c8d">
                                 <font>
                                    <Font size="10.0" />
                                 </font>
                              </Label>
                              <Label fx:id="lblClienteCedula" text="-" textFill="#2c3e50">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <Separator orientation="VERTICAL" />
                        <VBox spacing="3.0">
                           <children>
                              <Label text="Límite de Crédito:" textFill="#7f8c8d">
                                 <font>
                                    <Font size="10.0" />
                                 </font>
                              </Label>
                              <Label fx:id="lblClienteLimite" text="\$ 0.00" textFill="#27ae60">
                                 <font>
                                    <Font name="System Bold" size="11.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <Separator orientation="VERTICAL" />
                        <VBox spacing="3.0">
                           <children>
                              <Label text="Crédito Disponible:" textFill="#7f8c8d">
                                 <font>
                                    <Font size="10.0" />
                                 </font>
                              </Label>
                              <Label fx:id="lblClienteDisponible" text="\$ 0.00" textFill="#3498db">
                                 <font>
                                    <Font name="System Bold" size="11.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>

            <!-- ==================== CATÁLOGO DE PRODUCTOS ==================== -->
            <VBox spacing="10.0" styleClass="card" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label styleClass="panel-title" text="Catálogo de Productos">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>

                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <children>
                        <Label text="Seleccionar Producto:" minWidth="130.0">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="cmbProducto" prefWidth="350.0" promptText="Elija un producto" />

                        <Label text="Cantidad:" minWidth="70.0">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Spinner fx:id="spnCantidad" prefWidth="80.0" editable="true" />

                        <Button mnemonicParsing="false" onAction="#agregarAlCarrito"
                               styleClass="btn-success" text="➕ Agregar al Carrito">
                           <font>
                              <Font name="System Bold" size="11.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>

                  <!-- Carrito de Compras -->
                  <TableView fx:id="tablaCarrito" prefHeight="250.0" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colProductoCodigo" prefWidth="80.0" text="Código" />
                        <TableColumn fx:id="colProductoNombre" prefWidth="280.0" text="Producto" />
                        <TableColumn fx:id="colProductoCantidad" prefWidth="80.0" text="Cantidad" />
                        <TableColumn fx:id="colProductoPrecio" prefWidth="110.0" text="Precio Unit." />
                        <TableColumn fx:id="colProductoSubtotal" prefWidth="110.0" text="Subtotal" />
                        <TableColumn fx:id="colProductoIVA" prefWidth="100.0" text="IVA (12%)" />
                        <TableColumn fx:id="colProductoTotal" prefWidth="120.0" text="Total" />
                        <TableColumn fx:id="colAcciones" prefWidth="100.0" text="Acciones" />
                     </columns>
                  </TableView>
               </children>
            </VBox>

            <!-- ==================== TOTALES Y FORMA DE PAGO ==================== -->
            <HBox spacing="10.0">
               <children>
                  <!-- Panel de forma de pago -->
                  <VBox spacing="10.0" styleClass="card" HBox.hgrow="ALWAYS">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                     <children>
                        <Label styleClass="panel-title" text="Forma de Pago">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>

                        <RadioButton fx:id="rbContado" selected="true" text="Pago de Contado"
                                    styleClass="radio-button">
                           <font>
                              <Font size="12.0" />
                           </font>
                           <toggleGroup>
                              <ToggleGroup fx:id="grupoPago" />
                           </toggleGroup>
                        </RadioButton>

                        <RadioButton fx:id="rbCredito" text="Compra a Crédito"
                                    styleClass="radio-button">
                           <font>
                              <Font size="12.0" />
                           </font>
                           <toggleGroup>
                              <fx:reference source="grupoPago" />
                           </toggleGroup>
                        </RadioButton>

                        <!-- Opciones de crédito -->
                        <VBox fx:id="panelCredito" spacing="10.0" disable="true"
                             style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-background-radius: 5;">
                           <children>
                              <HBox spacing="10.0" alignment="CENTER_LEFT">
                                 <children>
                                    <Label text="Cuota Inicial (30%):" minWidth="130.0">
                                       <font>
                                          <Font size="11.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="lblCuotaInicial" text="\$ 0.00" textFill="#27ae60">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>

                              <HBox spacing="10.0" alignment="CENTER_LEFT">
                                 <children>
                                    <Label text="Plazo:" minWidth="130.0">
                                       <font>
                                          <Font size="11.0" />
                                       </font>
                                    </Label>
                                    <ComboBox fx:id="cmbPlazo" prefWidth="150.0" promptText="Seleccione plazo" />
                                 </children>
                              </HBox>

                              <HBox spacing="10.0" alignment="CENTER_LEFT">
                                 <children>
                                    <Label text="Interés (5%):" minWidth="130.0">
                                       <font>
                                          <Font size="11.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="lblInteres" text="\$ 0.00" textFill="#e74c3c">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>

                              <HBox spacing="10.0" alignment="CENTER_LEFT">
                                 <children>
                                    <Label text="Valor Cuota Mensual:" minWidth="130.0">
                                       <font>
                                          <Font size="11.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="lblValorCuota" text="\$ 0.00" textFill="#3498db">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>

                  <!-- Panel de totales -->
                  <VBox spacing="10.0" styleClass="card" prefWidth="350.0">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                     <children>
                        <Label styleClass="panel-title" text="Resumen de Compra">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>

                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Subtotal:" minWidth="100.0">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <Label fx:id="lblSubtotal" text="\$ 0.00" textFill="#2c3e50">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="IVA (12%):" minWidth="100.0">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <Label fx:id="lblIVA" text="\$ 0.00" textFill="#2c3e50">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>

                        <Separator />

                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="TOTAL A PAGAR:" minWidth="100.0">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <Label fx:id="lblTotal" text="\$ 0.00" textFill="#27ae60">
                                 <font>
                                    <Font name="System Bold" size="20.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>

                        <Separator />

                        <!-- Botones de acción -->
                        <HBox spacing="10.0" alignment="CENTER">
                           <children>
                              <Button fx:id="btnLimpiar" mnemonicParsing="false"
                                     onAction="#limpiarCarrito" prefWidth="100.0"
                                     styleClass="btn-warning" text="Limpiar">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Button>

                              <Button fx:id="btnRealizarCompra" mnemonicParsing="false"
                                     onAction="#realizarCompra" prefWidth="180.0"
                                     styleClass="btn-success" text="✓ Realizar Compra">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>

            <!-- Mensaje -->
            <Label fx:id="lblMensaje" alignment="CENTER" textAlignment="CENTER"
                  visible="false" wrapText="true" styleClass="success-label">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </center>
</BorderPane>
