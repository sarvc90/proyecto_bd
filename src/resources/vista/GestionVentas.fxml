<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taller.proyecto_bd.ui.GestionVentasController"
            stylesheets="@styles.css">

    <!-- ENCABEZADO -->
    <top>
        <VBox spacing="10" styleClass="header-section">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="GESTIÓN DE VENTAS" styleClass="title" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <Separator/>

            <!-- PANEL DE FILTROS Y BÚSQUEDA -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Tipo:">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
                <ComboBox fx:id="cmbFiltroTipo" prefWidth="120"/>

                <Separator orientation="VERTICAL"/>

                <Label text="Estado:">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
                <ComboBox fx:id="cmbFiltroEstado" prefWidth="120"/>

                <Separator orientation="VERTICAL"/>

                <Label text="Buscar:">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
                <TextField fx:id="txtBuscar" promptText="Código o cliente..." prefWidth="250"/>
                <Button fx:id="btnBuscar" text="Buscar" onAction="#buscar" styleClass="btn-primary"/>
                <Button fx:id="btnActualizar" text="Actualizar" onAction="#actualizar" styleClass="btn-secondary"/>
            </HBox>

            <!-- PANEL DE ESTADÍSTICAS -->
            <GridPane hgap="30" vgap="10" styleClass="stats-panel">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <!-- Total Ventas -->
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Total Ventas" styleClass="stats-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="lblTotalVentas" text="0" styleClass="stats-value" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                </VBox>

                <!-- Monto Total -->
                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Monto Total" styleClass="stats-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="lblMontoTotal" styleClass="stats-value" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                </VBox>

                <!-- Ventas a Crédito -->
                <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <Label text="Ventas a Crédito" styleClass="stats-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="lblVentasCredito" text="0" styleClass="stats-value-warning" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                </VBox>

                <!-- Ventas de Contado -->
                <VBox spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="0">
                    <Label text="Ventas de Contado" styleClass="stats-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="lblVentasContado" text="0" styleClass="stats-value" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                </VBox>
            </GridPane>
        </VBox>
    </top>

    <!-- TABLA DE VENTAS -->
    <center>
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <TableView fx:id="tblVentas" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colIdVenta" text="ID" prefWidth="50" minWidth="40"/>
                    <TableColumn fx:id="colCodigo" text="Código" prefWidth="120" minWidth="100"/>
                    <TableColumn fx:id="colCliente" text="Cliente" prefWidth="200" minWidth="150"/>
                    <TableColumn fx:id="colVendedor" text="Vendedor" prefWidth="150" minWidth="120"/>
                    <TableColumn fx:id="colFecha" text="Fecha" prefWidth="140" minWidth="120"/>
                    <TableColumn fx:id="colTipo" text="Tipo" prefWidth="100" minWidth="80"/>
                    <TableColumn fx:id="colTotal" text="Total" prefWidth="120" minWidth="100"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="100" minWidth="80"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- PANEL DE ACCIONES -->
    <bottom>
        <HBox spacing="15" alignment="CENTER_RIGHT" styleClass="footer-section">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <Button fx:id="btnVerDetalles" text="Ver Detalles" onAction="#verDetalles" styleClass="btn-info" disable="true">
                <font>
                    <Font size="14"/>
                </font>
            </Button>

            <Button fx:id="btnAnularVenta" text="Anular Venta" onAction="#anularVenta" styleClass="btn-danger" disable="true">
                <font>
                    <Font size="14"/>
                </font>
            </Button>

            <Region HBox.hgrow="ALWAYS"/>

            <Label text="Doble clic en una venta para ver sus detalles" styleClass="hint-label">
                <font>
                    <Font size="12" name="System Italic"/>
                </font>
            </Label>
        </HBox>
    </bottom>

</BorderPane>