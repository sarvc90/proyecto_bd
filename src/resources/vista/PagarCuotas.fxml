<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taller.proyecto_bd.ui.PagarCuotasController">

    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="Pago de Cuotas" textFill="white" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Gestión de pagos de créditos" textFill="#ecf0f1" style="-fx-font-size: 14px;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <!-- SECCIÓN: BÚSQUEDA DE CLIENTE -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;">
                <Label text="Buscar Cliente" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Separator/>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Cédula o Nombre:" minWidth="120"/>
                    <TextField fx:id="txtBuscarCliente" promptText="Ingrese cédula o nombre del cliente" HBox.hgrow="ALWAYS"/>
                    <Button fx:id="btnBuscar" text="Buscar" onAction="#buscarCliente" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                    <Button fx:id="btnLimpiar" text="Limpiar" onAction="#limpiarFormulario" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
                </HBox>

                <!-- Información del cliente -->
                <GridPane hgap="10" vgap="8" style="-fx-padding: 10 0 0 0;">
                    <Label text="Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblClienteNombre" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Cédula:" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblClienteCedula" text="-" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <Label text="Saldo Pendiente:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblSaldoPendiente" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>

                    <Label text="Cuotas Vencidas:" GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblCuotasVencidas" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                </GridPane>
            </VBox>

            <!-- SECCIÓN: TABLA DE CUOTAS -->
            <VBox spacing="10" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;">
                <Label text="Cuotas Pendientes" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Separator/>

                <TableView fx:id="tablaCuotas" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colNumeroCuota" text="# Cuota" minWidth="80" prefWidth="80"/>
                        <TableColumn fx:id="colVenta" text="Código Venta" minWidth="120" prefWidth="120"/>
                        <TableColumn fx:id="colValor" text="Valor" minWidth="100" prefWidth="120"/>
                        <TableColumn fx:id="colFechaVencimiento" text="Fecha Vencimiento" minWidth="130" prefWidth="140"/>
                        <TableColumn fx:id="colEstado" text="Estado" minWidth="100" prefWidth="110"/>
                        <TableColumn fx:id="colDiasAtraso" text="Días Atraso" minWidth="100" prefWidth="100"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <!-- SECCIÓN: REGISTRO DE PAGO -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;">
                <Label text="Registrar Pago" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Separator/>

                <GridPane hgap="15" vgap="10">
                    <Label text="Cuota Seleccionada:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblCuotaSeleccionada" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-text-fill: #2980b9;"/>

                    <Label text="Valor de la Cuota:" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblValorCuota" text="-" GridPane.columnIndex="3" GridPane.rowIndex="0" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>

                    <Label text="Fecha de Pago:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                    <DatePicker fx:id="dpFechaPago" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200"/>

                    <Label text="Monto a Pagar:" GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtMontoPago" promptText="0.00" GridPane.columnIndex="3" GridPane.rowIndex="1" prefWidth="150"/>

                    <Label text="Observaciones:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;" GridPane.valignment="TOP"/>
                    <TextArea fx:id="txtObservaciones" promptText="Notas adicionales (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="3" prefHeight="60" wrapText="true"/>
                </GridPane>

                <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                    <Button fx:id="btnRegistrarPago" text="Registrar Pago" onAction="#registrarPago" disable="true"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;">
                        <font>
                            <Font name="System Bold" size="14"/>
                        </font>
                    </Button>
                </HBox>
            </VBox>

            <!-- MENSAJE -->
            <Label fx:id="lblMensaje" visible="false" style="-fx-padding: 10; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;"/>

        </VBox>
    </center>

</BorderPane>
